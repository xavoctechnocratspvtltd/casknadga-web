.contact-form
	form#contact-form(method='post', action='sendmail.php', role='form')
		.form-group.wow.fadeInDown(data-wow-duration='500ms', data-wow-delay='.6s')
			.atk-form-row.atk-form-field{$name}
			//- input#name.form-control(placeholder='Your Name', name='name', type='text')
		.form-group.wow.fadeInDown(data-wow-duration='500ms', data-wow-delay='.8s')
			.atk-form-row.atk-form-field{$email}
			//- input#email.form-control(placeholder='Your Email', name='email', type='email')
		.form-group.wow.fadeInDown(data-wow-duration='500ms', data-wow-delay='1s')
			.atk-form-row.atk-form-field{$subject}
			//- input#subject.form-control(placeholder='Subject', name='subject', type='text')
		.form-group.wow.fadeInDown(data-wow-duration='500ms', data-wow-delay='1.2s')
